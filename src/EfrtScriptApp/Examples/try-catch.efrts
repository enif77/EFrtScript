S" --- TRY - CATCH ---" S. CR

: could-fail ( -- n )
  DUP 1 = IF 123 THROW THEN ;
   
: do-it ( a b -- c)
  DROP DROP could-fail ;

: try-it ( --)
   1 2 ['] do-it CATCH IF
   ( x1 x2 ) DROP DROP ." There was an exception" CR
   ELSE ." The number was " . CR
   THEN
;

2 try-it
3 try-it
1 try-it

\ ; retry-it ( -- )
\    BEGIN 1 2 ['] do-it CATCH WHILE
\    ( x1 x2) DROP DROP ." Exception, keep trying" CR
\    REPEAT ( char )
\    ." The number was " . CR
\ ;
